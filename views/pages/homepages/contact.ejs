<%- include('../partials/headers&footers/bootstrap-header') %>
<%- include('../partials/navs/contact_nav') %>
<!-- Message -->
<% if (message.length > 0) { %>
    <div class="alert alert-success text-center"><p><%= message %></p></div>
  <% } %>
<section id="contact-us">
    <div class="contact-us-body">
        <div class="contact-us-body-form">
            <form class="contact-us-form" action="/contact"
            method="POST">
                <label for="">Name</label>
                <input name="Name" type="text" placeholder="Name" required>
                <label for="">Email</label>
                <input name="Email" type="text" placeholder="Email">
                <label for="">Phone</label>
                <input name="Number" type="text" placeholder="Phone Number" required>
                <label for="">Message</label>
                <textarea name="Message" placeholder="Message" required></textarea>
                <button type="submit">Submit</button>
                </form>
        </div>
        <div class="contact-us-body-text">
            <h1>Contact</h1>
            <div class="wrap">
            <p>We are grateful for your interest in Open Hands Nursing Agency. We would be happy to respond to your inquiry and answer any questions you might have about us, so please fill out all the necessary information so we can get back to you quickly.</p>
        </div>
        </div>
    </div>
    </section>
<%- include('../partials/headers&footers/footer') %>